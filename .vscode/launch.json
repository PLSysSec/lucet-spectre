{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "png_strawman",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigation", "strawman",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest_spectre_strawman.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "test_sfi",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigation", "sfi",
                "--spectre-disable-core-switching",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test.wasm",
                "-o", "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test_spectre_sfi.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "png_sfi",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigation", "sfi",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest_spectre_sfi.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "run_test_sfi",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/lucet-wasi",
            "args": [
                "--heap-address-space", "8GiB",
                 "--max-heap-size", "4GiB",
                 "--stack-size", "8MiB",
                 "--dir", "/:/",
                 "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test_spectre_sfi.so"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "test_cet",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigation", "cet",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test.wasm",
                "-o", "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test_spectre_cet.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "test_pht_to_btb",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-pht-mitigation", "phttobtb",
                "--pinned-heap-reg",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test.wasm",
                "-o", "/tmp/test_pht_btb.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "png_pht_to_btb",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-pht-mitigation", "phttobtb",
                "--pinned-heap-reg",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "/tmp/png_pht_btb.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "png_cfi",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-pht-mitigation", "cfi",
                "--pinned-heap-reg",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "/tmp/png_cfi.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
    ]
}