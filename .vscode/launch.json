{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/test.wasm",
                "-o", "../out/sfi-spectre-test/test.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_baseline_lfence",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/test.wasm",
                "-o", "../out/sfi-spectre-test/test_spectre_baseline.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_spectre",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigations-enable",
                "--pinned-heap-reg",
                "--pinned-control-flow",
                "--spectre-callbacks-workaround", "true",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/basic_test/test.wasm",
                "-o", "../out/sfi-spectre-test/basic_test/test.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_png",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "../out/sfi-spectre-test/libpng/pngtest_spectre.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_spectre_png",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigations-enable",
                "--pinned-heap-reg",
                "--pinned-control-flow",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "../out/sfi-spectre-test/libpng/pngtest_spectre.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_spectre_cet_png",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigations-enable",
                "--pinned-heap-reg",
                "--pinned-control-flow",
                "--spectre-tblock-protection", "cet",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "../out/sfi-spectre-test/libpng/pngtest_spectre.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_ablockonly",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigations-enable",
                "--spectre-tblock-protection", "none",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest.wasm",
                "-o", "${workspaceFolder}/../out/sfi-spectre-test/libpng/pngtest_spectre.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucet-wasi",
            "program": "${workspaceFolder}/target/debug/lucet-wasi",
            "args": [
                "--heap-address-space", "8GiB",
                "--max-heap-size", "4GiB",
                "--stack-size", "8MiB",
                "--dir", "/:/",
                "${workspaceFolder}/../out/sfi-spectre-test/basic_test/test_spectre.so"

            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "lucetc_spectre_cet_mpk",
            "program": "${workspaceFolder}/target/debug/lucetc",
            "args": [
                "--spectre-mitigations-enable",
                "--pinned-heap-reg",
                "--pinned-control-flow",
                "--spectre-tblock-protection", "cet",
                "--spectre-heap-protection", "mpk",
                "--bindings", "./lucet-wasi/bindings.json",
                "--guard-size", "4GiB",
                "--min-reserved-size", "4GiB",
                "--max-reserved-size", "4GiB",
                "--emit", "obj",
                "../out/sfi-spectre-test/basic_test/test.wasm",
                "-o", "../out/sfi-spectre-test/basic_test/test.o",
            ],
            "env": {
                "RUST_BACKTRACE" : "1"
            },
            "cwd": "${workspaceFolder}"
        },

    ]
}